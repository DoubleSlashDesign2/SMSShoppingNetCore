@model IEnumerable<DAL.Models.Product>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<table class="table">


    @foreach (var item in Model)
    {
        <tr>
            <td width="20%">
                <h4>@Html.ActionLink(item.ProductName, "Details", new { id = item.Id })</h4>
                <h4>$@Html.DisplayFor(modelItem => item.ProductPrice)</h4>
                @{
                    if (ViewBag.sessionUser != null)
                    {
                        @Html.ActionLink("Add +", "AddToCart", new { id = item.Id }, new { @class = "btn btn-default" })
                    }
                }


            </td>
            <td width="60%">
                <h8>@Html.DisplayFor(modelItem => item.ProductDescription)</h8>
            </td>
            <td width="20%">
                <img src=@item.ProductImageUrl alt="Alternate Text" class="img-thumbnail" style="max-width:200px;max-height:200px" />
            </td>
        </tr>
    }

</table>