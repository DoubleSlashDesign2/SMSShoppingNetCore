@model IEnumerable<DAL.Models.Product>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


@foreach (var item in Model)
{
<div class="col-md-4 sms-product">
    <div class="thumbnail">
        <img src=@item.ProductImageUrl alt="Alternate Text" style="max-width:90%;max-height:90%" />
    </div>

    <h4>@Html.ActionLink(item.ProductName, "Details", new { id = item.Id }, new { @class = "sms-title fredoka" })</h4>
    <h4>$@Html.DisplayFor(modelItem => item.ProductPrice)</h4>
    @{
        if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Add +", "AddToCart", new { id = item.Id }, new { @class = "btn btn-default" })
        }
    }
</div>
}

